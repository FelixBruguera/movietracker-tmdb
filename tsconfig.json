{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@ui/*": ["./app/components/ui/*"],
      "@lib/*": ["./lib/*"],
      "@stores/*": ["./src/stores/*"],
      "~/*": ["./*"]
    }
  }
}